<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootView">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gridMessages"
        android:layout_width="match_parent"
        android:layout_height="570dp"
        android:layout_below="@id/scPhoto"
        android:background="@color/white"
        android:clipToPadding="false"
        android:layout_above="@+id/SingleFooter"
        android:padding="8dp" />
    <ImageView
        android:id="@+id/scPhoto"
        android:layout_width="77dp"
        android:layout_height="70dp"
        android:layout_alignStart="@id/scPhoto"
        android:layout_marginStart="0dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/sctvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gridMessages"
        android:layout_marginStart="100sp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/sctvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gridMessages"
        android:layout_marginEnd="-100dp"
        android:layout_marginTop="20sp"
        android:layout_alignEnd="@+id/sctvName"
        android:nextFocusLeft="@id/sctvName"
        android:text="TextView" />

    <TextView
        android:id="@+id/SingleTVTimer"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="00:00"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/SingleTVCDTimer"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="100dp"
        android:text="0:00"
        android:textSize="20sp" />
    <Button
        android:id="@+id/SingleBtnAdd5min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="23dp"
        android:text="add 5 min" />
    <Button
        android:id="@+id/SingleBtnBlockUnblock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100sp"
        android:text="Block" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:id="@+id/SingleFooter"
        tools:context=".YourActivity">


        <EditText
            android:id="@+id/etMessage"
            android:layout_width="241dp"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="77dp"
            android:layout_marginBottom="12dp"
            android:hint="Type your message..."
            android:imeOptions="actionSend"
            android:inputType="textMultiLine"
            android:maxLines="4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:text="Send"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/ivEmoji"
            android:layout_width="53dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:src="@drawable/ic_emoji"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>